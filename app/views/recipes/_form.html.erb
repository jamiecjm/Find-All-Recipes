
  
  <%=f.hidden_field :user_id, :value => @current_user.id%>

  <div class="panel panel-default">
    <div class="panel-body">
      <div class="form-group">
      <%=f.label :title%>
      <%=f.text_field :title,class: "form-control",required: true%>
      </div>

      <div class="form-group">
      <%=f.label :main_ingredient%>
      <%=f.select :main_ingredient_id, options_for_select(MainIngredient.all.order("name").pluck(:name,:id),:selected => recipe.main_ingredient_id),{:prompt => "Select"},{class: "form-control",required: true} %>
      </div>

      <div class="form-group">
      <%=f.label :cuisine%>
      <%=f.select :cuisine_id, options_for_select(Cuisine.all.order("name").pluck(:name,:id),:selected => recipe.cuisine_id),{:prompt => "Select"},{class: "form-control",required: true} %>
      </div>

      <div class="form-group">
        <%=f.label :food_photo, "Photo"%>
        <%if @recipe.food_photo?%>
        <div class="row">
          <div class="col-sm-3 col-md-3">
            <%= image_tag @recipe.food_photo.url, class: "img-responsive"%>
          </div>
        </div>
          <%= f.check_box :remove_food_photo %>
          <%= f.label 'Remove picture'%>
        <%end%>
        <%=f.file_field :food_photo,class: "form-control"%>
      </div>
    </div>
  </div>


  <div class="panel panel-default">
    <div class="panel-body">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="col-xs-6 col-sm-6 col-md-6">
          <%=f.label :cooktime, 'COOK TIME'%><br>
          <span class="col-xs-3 col-sm-3 col-md-3">
          <%=f.number_field :cooktime1,class: "form-control",required: true,placeholder: "10"%>
          </span>
          <span class="col-xs-1 col-sm-1 col-md-1">-</span>
          <span class="col-xs-3 col-sm-3 col-md-3"> 
          <%=f.number_field :cooktime2,class: "form-control",required: true,placeholder: "20"%> 
          </span>
          <span class="col-xs-1 col-sm-1 col-md-1">minutes</span>
          
        </div>

        <div class="col-xs-6 col-sm-6 col-md-6">
          <%=f.label :servings, "MAKES"%><br>
          <span class="col-xs-3 col-sm-3 col-md-3">
          <%=f.number_field :servings,class: "form-control",required: true,placeholder: "2"%>
          </span> 
          <span class="col-xs-1 col-sm-1 col-md-1">servings</span>
        </div>


      </div>

      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class ="description-box">
          <div class="form-group">
            <%=f.label :description%>
            <%=f.text_area :description,class: "form-control", rows: "10"%>
          </div>
        </div>
      </div>
    </div>
  </div>

  

