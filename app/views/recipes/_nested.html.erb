    <div class="panel panel-default">
      <div class="panel-body">
        <div class="page-header tag col-md-12">
          INGREDIENTS
        </div>
        <ul style="list-style-type:none">
          <li class="form-group row">
            <div class="col-xs-2 col-sm-2 col-md-2">
              <%=f.label :amount%>
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2">
              <%=f.label :unit%>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <%=f.label :ingredient%>
            </div>
          </li>
          <%=f.fields_for :ingredients,Ingredient.new,class: "form-inline" do |ff|%>
            <%=render "ingredient", ff: ff%> 
          <%end%>
          <%= f.link_to_add "+", :ingredients, class: "btn btn-default" %>
        </ul>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-body">
        <div class="page-header">
          INSTRUCTIONS
        </div>
        
          <%=f.fields_for :instructions,Instruction.new do |fff|%>
            <%=render "instructions", fff: fff%> 
          <%end%>

          <%= f.link_to_add "Add step", :instructions %>

      </div>
    </div> 