<li class="form-group row">
	<div class="col-xs-2 col-sm-2 col-md-2">
		<%=ff.number_field :amount, placeholder: "eg. 1",class: "form-control",step: "any", min: "0"%> 
	</div>
	<div class="col-xs-2 col-sm-2 col-md-2">
		<%=ff.text_field :unit, placeholder: "eg. clove",autofocus:false,class: "form-control"%> 
	</div>
	<div class="col-xs-6 col-sm-6 col-md-6">
		<%=ff.text_field :ingredient, placeholder: "eg. Garlic",class: "form-control"%>
	</div>
	<div class="col-xs-2 col-sm-2 col-md-2">
		<%= ff.link_to_remove "-", class: "btn btn-default" %>
	</div>
</li>