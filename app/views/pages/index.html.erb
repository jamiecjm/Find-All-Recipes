<div class="col-xs-12 col-sm-4 col-md-3">

	<div class="row">
		<h4>Cookbook</h4>
		<%=text_field_tag :search, nil, placeholder: "Search"%>
		<%=submit_tag "Go"%>
	</div>

	<div class="row">
		Main Ingredient <i class="glyphicon glyphicon-chevron-down" style="float:right"></i>
	</div>

	<div class="row">
		Cuisine <i class="glyphicon glyphicon-chevron-down" style="float:right"></i>
	</div>

	<div class="row">
		Seasonal Recipes <i class="glyphicon glyphicon-chevron-down" style="float:right"></i>
	</div>

</div>

<div class="col-xs-12 col-sm-8 col-md-9" id="row">

	<%@recipes.each do |recipe|%>

	<div class="col-xs-12 col-sm-12 col-md-4 boxes" id="<%=recipe.id%>">

		<%=link_to recipe_path(recipe) do%>

			<div class="food-photo row">
				<%if recipe.food_photo.present?%>
					<%=image_tag recipe.food_photo.url%>
				<%else%>
					<%=image_tag recipe.food_photo.default_url%>
				<%end%>
			    <div class="middle">
			    	<i class="glyphicon glyphicon-search"></i>
			    </div>
			</div>
		

		<div class="row">
			<strong><%=recipe.title%></strong><br>

		<%end%>

			by: <%=link_to "#{recipe.user.name}", "/users/#{recipe.user.id}/recipes"%><br>

			<%=link_to new_favourite_path(user: @user, recipe: recipe),remote: true do%>
				<%if !signed_in? || !@favourites.include?(recipe.id)%>
					<i class="glyphicon glyphicon-heart-empty"></i> 
				<%else%>
					<i class="glyphicon glyphicon-heart"></i>
				<%end%>
			<%end%>
			&nbsp <span><%=number_with_delimiter(recipe.favourites.count)%></span>
		</div>
	</div>

	<%end%>

</div>

