<div class="sign-in panel panel-default col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
	<div class="panel-body">
		<h1 class="page-header">Login</h1>


		<%= form_tag sessions_path do %>
		  <div class="form-group field">
		    <%= email_field_tag :email,nil, autofocus: true, class: "form-control", placeholder: "Email" %>
		  </div>

		  <div class="form-group field">
		    <%= password_field_tag :password,nil, autocomplete: "off", class: "form-control", placeholder: "Password"  %>
		  </div>



		    <%= submit_tag "Log in", class: "btn btn-default" %><br><br>

		    <p>Or</p>
		    <div class="row">
		    	<div class="col-xs-8 col-sm-5 col-md-5">
				<%= link_to "/auth/facebook" do%>
					<%=image_tag "facebook-login.png"%>
				<%end%>
				</div>
				<div class="col-sm-4 col-md-7">
				</div>
			</div>
			<br>
			<%=link_to "Forgot Password?",new_passwords_path%>

		<% end %>

	</div>
</div>
