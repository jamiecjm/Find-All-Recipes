<!DOCTYPE html>
<html>
  <head>
    <title>Recipebook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default ">
      <div class="container-fluid col-xs-12 col-sm-12 col-md-8 col-md-offset-2">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">WebSiteName</a>
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span> 
          </button>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="#">Page 1</a></li>
            <li><a href="#">Page 2</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <%if !signed_in?%>
              <li><a href="/users/new"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
              <li><a href="/sessions/new"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            <%else%>
              <li><a href="/users/<%=current_user.id%>"><span class="glyphicon glyphicon-user"></span> Profile</a></li>
              <li><%=link_to session_path(current_user), method: :delete do%>
                    <span class="glyphicon glyphicon-log-out"></span> Logout
                  <%end%>
              </li>
            <%end%>
          </ul>
        </div>
      </div>
    </nav>
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
      <% flash.each do |key, value| -%>
        <%if key == "alert" || key == "notice"%>
          <%key = "info"%>
        <%end%>
        <div class="alert alert-<%=key%> alert-dismissable">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <%=h value %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
