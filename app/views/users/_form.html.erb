


  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name,class: "form-control",required: true %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, type: 'email',class: "form-control",required: true %>
  </div>

  <div class="form-group">
    <%= form.label :profile_picture, "Profile Picture"%>
    <%if @user.avatar?%>
      <div class="row">
        <div class="col-sm-3 col-md-3">
          <%= image_tag @user.avatar.url, class: "img-responsive img-circle"%>
        </div>
      </div>  
      <%= form.check_box :remove_avatar %>
      <%= form.label 'Remove picture'%>
    <%end%>
    
    <%= form.file_field :avatar,class: "form-control" %>
  </div>


