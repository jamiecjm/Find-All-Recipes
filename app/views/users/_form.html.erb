


  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name,class: "form-control",required: true %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_no,class: "form-control",required: true %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, type: 'email',class: "form-control",required: true %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_birth %>
    <%= form.text_field :birthday,class: "form-control datepicker",placeholder: 'yyyy-mm-dd',required: true %>
  </div>

  <div class="form-group">
    <%= form.label :street %>
    <%= form.text_field :street,class: "form-control",required: true %>
  </div>

  <div class="form-group">
    <%= form.label :city %>
    <%= form.text_field :city,class: "form-control",required: true %>
  </div>

  <div class="form-group">
    <%= form.label :postcode %>
    <%= form.number_field :postcode,class: "form-control",required: true %>
  </div>

  <div class="form-group">
    <%= form.label :state %>
    <%= form.text_field :state,class: "form-control",required: true %>
  </div>

  <div class="form-group">
    <%= form.label :profile_picture, "Profile Picture"%>
    <%= form.file_field :avatar,class: "form-control" %>
  </div>


